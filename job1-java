pipeline {
    agent {
        // Use a Docker image for the entire pipeline
        docker {
            image 'maven:3.6.3-openjdk-17-slim'
            args '-v $HOME/.m2:/root/.m2'
        }
    }
    stages {
        stage('job1-java') {
            steps {
                sh 'mvn --version'
            }
        }
    }
}

