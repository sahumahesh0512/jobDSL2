pipeline {
    agent none
    stages {
        stage('job1-java') {
            agent {
                // Use a custom Docker image for the 'build' stage
                docker {
                    image 'maven:3.6.3-eclipse-temurin-17-alpine'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn --version'
            }
        }
    }
}

