pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                // Use a custom Docker image for the 'build' stage
                docker {
                    image 'maven:3.9.4-eclipse-temurin-17-alpine'
                    args '-v $HOME/.m2:/root/.m2'
                }
            }
            steps {
                sh 'mvn --version'
            }
        }
    }
}

